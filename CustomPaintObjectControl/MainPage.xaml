        <Controls:PaintObjectTemplatedControl Background="White" Width="300" Height="500">
            <StackPanel>
                <Rectangle Fill="ForestGreen" Height="300"/>
                <TextBlock Text="Testing testing testing testing testing"/>
                <Button Content="Button"/>
            </StackPanel>
        </Controls:PaintObjectTemplatedControl>

        <Controls:PaintObjectTemplatedControl Width="640" Height="368">
            <Image Source="Assets\iphone.png" Stretch="Fill"/>
        </Controls:PaintObjectTemplatedControl>

    </Grid>
</Page>
