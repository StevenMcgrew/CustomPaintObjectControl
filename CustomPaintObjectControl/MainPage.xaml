                <Slider Name="sliderOpacity" Width="100" Minimum="25" Value="100" Style="{StaticResource styleSliderForOpacity}" Height="18" Margin="0,0,5,0" Padding="0,0,0,2" />
            </StackPanel>
            <Rectangle Width="7" Height="7" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,-2,-2,0"/>
