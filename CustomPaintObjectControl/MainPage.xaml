            <Button Name="btnClose" HorizontalAlignment="Right" VerticalAlignment="Top" ToolTipService.ToolTip="Close" FontSize="8" Background="#B2007ACC" Foreground="White" FontWeight="Bold" Height="18" Width="27" BorderThickness="0" Padding="11,4,8,6">
